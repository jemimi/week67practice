
@model week67practice.Models.Season


@{ 
    ViewBag.Title = "Show Season";

    //Presents information about the season
    string url = "/Content/images/" + Model.SeasonName+ ".jpg";
}

<!-- dynamically rendered view -->
<h2>Season</h2>

<p> The season is @Model.SeasonName</p>
<figure>
    <figcaption class="photographer">
        <a href="@Model.ImageURL">Photo By: @Model.PhotographerName</a>
    </figcaption>
    <figcaption class="temp"> @Model.TempCelcius &#8451;</figcaption>
     <img src="@url" alt="@Model.SeasonName" />
 </figure>

   